<div class="home">
  <div class="top">
    <div class="container">
      <div class="row col-lg-6">
        <div class="area-search">
          <div class="area-search-inner">
            <p>Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= form_with(url: search_rooms_path, method: :get, local: true) do |f| %>

              <%= f.label :area, "エリア", class: "form-label" %>
              <%= f.text_field :area, placeholder: "東京", class: "form-control" %>

              <%= f.submit "探す", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container example-area">
    <div class="example-area-inner">
      <h2>おすすめのエリア</h2>
      <div class="row">
        <div class="col-lg-3 col-6">
          <%= link_to image_tag("img_tokyo.jpeg"), search_rooms_path(area: "東京") %>
          <span>東京</span>
        </div>
        <div class="col-lg-3 col-6">
          <%= link_to image_tag("img_osaka.jpeg"), search_rooms_path(area: "大阪") %>
          <span>大阪</span>
        </div>
        <div class="col-lg-3 col-6">
          <%= link_to image_tag("img_kyoto.jpeg"), search_rooms_path(area: "京都") %>
          <span>京都</span>
        </div>
        <div class="col-lg-3 col-6">
          <%= link_to image_tag("img_sapporo.jpeg"), search_rooms_path(area: "札幌") %>
          <span>札幌</span>
        </div>
      </div>
    </div>
</div>
