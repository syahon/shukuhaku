<div class="container">
  <h4>予約済みルーム一覧</h4>
  <table class="table">
  <thead>
    <tr>
      <th scope="col-2">ルーム画像</th>
      <th scope="col-3">ルーム名</th>
      <th scope="col-2">ルーム紹介</th>
      <th scope="col-1">合計料金</th>
      <th scope="col-1">開始日</th>
      <th scope="col-1">終了日</th>
      <th scope="col-2">予約確定日時</th>
    </tr>
  </thead>
  <% @reservations.each do |reservation| %>
    <tbody>
      <tr>
        <td class="col-2"><%= image_tag reservation.room.image_resize, class: "reservation-image" %></td>
        <td class="col-3"><%= reservation.room.room_name %></td>
        <td class="col-2"><%= reservation.room.introduction %></td>
        <td class="col-1">¥<%= reservation.room.price * reservation.sum_people %></td>
        <td class="col-1"><%= reservation.start_date %></td>
        <td class="col-1"><%= reservation.end_date %></td>
        <td class="col-2"><%= reservation.created_at.to_s(:datetime_jp) %></td>
      </tr>
    </tbody>
  <% end %>
</table>
</div>
<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
