<div class="container reservation-container">
  <h4>予約済みルーム一覧</h4>
  <table class="table">
    <thead class="reservation-thead">
      <tr>
        <th scope="col-2">ルーム画像</th>
        <th scope="col-3">ルーム名</th>
        <th scope="col-2">ルーム紹介</th>
        <th scope="col-1">合計料金</th>
        <th scope="col-1">開始日</th>
        <th scope="col-1">終了日</th>
        <th scope="col-2">予約確定日時</th>
      </tr>
    </thead>
    <tbody class="reservation-tbody">
      <% @reservations.each do |reservation| %>
        <tr>
          <td class="col-2"><%= link_to image_tag(reservation.room.image_resize, alt: "ルーム画像", class: "reservation-image"), room_path(reservation.room) %></td>
          <td class="col-3"><%= link_to(reservation.room.room_name, room_path(reservation.room)) %></td>
          <td class="col-2"><%= reservation.room.introduction %></td>
          <td class="col-1">¥</td>
          <td class="col-1"><%= reservation.start_date %></td>
          <td class="col-1"><%= reservation.end_date %></td>
          <td class="col-2"><%= reservation.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'shared/pagy' %>
