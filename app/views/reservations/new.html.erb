<div class="container-fluid reservation-form">
  <div class="reservation-form-inner">
    <div class="container">
      <h1>予約内容確認</h1>
      <p>¥ <%= @room.price %> / 日</p>
      <%= form_with(model:@reservation, local: true) do |f| %>
        <%= hidden_field_tag :id, @room.id %>

        <%= f.label :start_date, class: "form-label" %>
        <%= f.text_field :start_date, readonly: true, class: "form-control" %>

        <%= f.label :end_date, class: "form-label" %>
        <%= f.text_field :end_date, readonly: true, class: "form-control" %>

        <%= f.label :sum_people, class: "form-label" %>
        <%= f.text_field :sum_people, readonly: true, class: "form-control" %>

        <p class="days">使用日数： <%= (@reservation.end_date - @reservation.start_date).to_i %> 日</p>

        <%= f.label :total_price, class: "form-label" %>
        <%= f.text_field :total_price, readonly: true, class: "form-control" %>

        <%= f.submit "予約を確定する", class: "btn btn-primary" %>

        <%= f.submit "ルーム詳細に戻る", name: :back, class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
