<div class="user-form">
  <div class="form-inner">
    <p>ログイン</p>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :mail, "メールアドレス", class: "form-label" %>
      <span class="badge bg-danger">必須</span>
      <%= f.email_field :mail, class: "form-control" %>

      <%= f.label :password, "パスワード", class: "form-label" %>
      <span class="badge bg-danger">必須</span>
      <%= f.password_field :password ,class: "form-control" %>

      <div class="form-check">
        <%= f.label :remember_me, "次回から自動でログインする", class: "form-check-label", for: "flexCheckDefault" %>
        <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault"  %>
      </div>

      <%= f.submit "ログイン", class: "btn btn-primary", id: "login" %>
      <div class="new-user-link">
        <%= link_to "新しいアカウントを作成する", sign_up_path %>
      </div>
    <% end %>
  </div>
</div>
